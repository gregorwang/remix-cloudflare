@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');

/*
 * Music 页面设计系统样式
 * 
 * 颜色系统 (01-colors.md)
 * 主色: #faf9f5 (60%) - 温暖奶白色
 * 辅色: #f5f4ed (30%) - 浅米灰色
 * 点缀色: #d97757 (展示) / #c96442 (交互) (10%) - 陶土橙色
 * 文字色: #141413 - 深黑褐色
 * 
 * 字体系统 (02-typography.md)
 * Hero标题: text-5xl + font-bold + leading-none + tracking-tighter
 * H1: text-4xl + font-bold + leading-tight + tracking-tight
 * H2: text-3xl + font-semibold + leading-tight + tracking-tight
 * 正文: text-base + font-normal + leading-relaxed
 * 按钮: text-sm + font-medium
 * 
 * 间距系统 (03-spacing.md)
 * 组件内部: 固定值 (0.25/0.5/0.75/1/1.5rem)
 * 组件外部: 流体值 (2/2.5/3/4rem)
 * Section: Page Level (section-sm/md/lg/xl)
 * 
 * 圆角系统 (04-radius.md)
 * xs: 4px (Badge/Tag)
 * sm: 8px (小按钮)
 * DEFAULT: 12px (标准按钮)
 * lg: 16px (卡片)
 * xl: 16-24px (特色卡片)
 * 2xl: 16-32px (Hero)
 * 
 * 动画: Expo Out cubic-bezier(0.16, 1, 0.3, 1)
 */

:root {
  /* 间距系统 - Component Level (固定值) */
  --spacing-0-25: 0.25rem;  /* 4px */
  --spacing-0-5: 0.5rem;     /* 8px */
  --spacing-0-75: 0.75rem;   /* 12px */
  --spacing-1: 1rem;         /* 16px */
  --spacing-1-5: 1.5rem;     /* 24px */
  
  /* 圆角系统 */
  --radius-xs: 0.25rem;      /* 4px - Badge/Tag */
  --radius-sm: 0.5rem;       /* 8px - 小按钮 */
  --radius: 0.75rem;         /* 12px - 标准按钮 */
  --radius-lg: 1rem;         /* 16px - 卡片 */
  --radius-xl: clamp(1rem, 0.857rem + 0.714vw, 1.5rem);   /* 16-24px */
  --radius-2xl: clamp(1rem, 0.714rem + 1.429vw, 2rem);    /* 16-32px */
}

* {
  font-family: 'source-han-serif-sc', 'Noto Serif SC', system-ui, sans-serif;
}

/* ============================================
   星空背景系统 - 使用设计系统颜色
   ============================================ */

.starfield-bg {
  /* 深色背景使用文字色和点缀色 */
  background: linear-gradient(135deg, 
    #141413 0%,                        /* 深黑褐色 */
    #2a2a28 25%,                       /* 深色过渡 */
    #3d3d3a 50%,                       /* 中间色 */
    rgba(217, 119, 87, 0.15) 75%,     /* 点缀色淡化 */
    rgba(201, 100, 66, 0.2) 100%      /* 点缀色交互淡化 */
  );
  min-height: 100vh;
  position: relative;
}

.starfield-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.stars, .stars2, .stars3 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
}

/* 星星使用主色创建温暖星空 */
.stars {
  background-image: 
    radial-gradient(circle 2px at 20px 30px, #faf9f5, transparent),
    radial-gradient(circle 2px at 40px 70px, rgba(250, 249, 245, 0.8), transparent),
    radial-gradient(circle 1px at 90px 40px, #f5f4ed, transparent),
    radial-gradient(circle 1px at 130px 80px, rgba(245, 244, 237, 0.6), transparent),
    radial-gradient(circle 2px at 160px 30px, #faf9f5, transparent);
  background-repeat: repeat;
  background-size: 200px 100px;
  animation: zoom 20s infinite linear;
}

.stars2 {
  background-image: 
    radial-gradient(circle 1px at 40px 60px, #faf9f5, transparent),
    radial-gradient(circle 1px at 120px 10px, rgba(250, 249, 245, 0.7), transparent),
    radial-gradient(circle 1px at 160px 80px, #f5f4ed, transparent);
  background-repeat: repeat;
  background-size: 300px 200px;
  animation: zoom 40s infinite linear;
}

.stars3 {
  background-image: 
    radial-gradient(circle 1px at 10px 10px, rgba(217, 119, 87, 0.5), transparent),
    radial-gradient(circle 1px at 150px 150px, rgba(201, 100, 66, 0.4), transparent);
  background-repeat: repeat;
  background-size: 400px 300px;
  animation: zoom 60s infinite linear;
}

@keyframes zoom {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

/* 星星移动动画（从 tailwind.css 迁移） */
@keyframes stars-move {
  from { transform: translateY(0px); }
  to { transform: translateY(-1000px); }
}

/* ============================================
   进度条和特效 - 使用点缀色
   ============================================ */

.constellation-progress {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, #d97757, #c96442, #d97757, #c96442);
  transform-origin: left;
  transform: scaleX(0);
  z-index: 1000;
  transition: transform 0.1s cubic-bezier(0.16, 1, 0.3, 1);
}

/* ============================================
   粒子系统 - 使用点缀色
   ============================================ */

.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
}

.particle {
  position: absolute;
  background: radial-gradient(circle, rgba(217, 119, 87, 0.8) 0%, rgba(217, 119, 87, 0.2) 50%, transparent 100%);
  border-radius: 50%;
  animation: particle-float linear infinite;
  opacity: 0.7;
}

@keyframes particle-float {
  0% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.7;
  }
  90% {
    opacity: 0.7;
  }
  100% {
    transform: translateY(-100px) rotate(360deg);
    opacity: 0;
  }
}

/* ============================================
   颜色类 - 设计系统颜色
   ============================================ */

.galaxy-bg {
  /* 使用点缀色创建温暖光效 */
  background: radial-gradient(ellipse at center, rgba(217, 119, 87, 0.08) 0%, transparent 50%),
              radial-gradient(ellipse at 80% 20%, rgba(201, 100, 66, 0.06) 0%, transparent 50%),
              radial-gradient(ellipse at 20% 80%, rgba(217, 119, 87, 0.08) 0%, transparent 50%);
}

.text-galaxy-white {
  color: rgba(250, 249, 245, 0.9); /* 主色淡化 */
}

.text-star-gold {
  color: #d97757; /* 点缀色-展示 (10%) */
}

.text-aurora-purple {
  color: #c96442; /* 点缀色-交互 (10%) */
}

/* ============================================
   文字特效 - 使用点缀色
   ============================================ */

.stellar-text {
  background: linear-gradient(45deg, #d97757, #c96442, #d97757);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 0 30px rgba(217, 119, 87, 0.5);
}

.glowing-number {
  text-shadow: 0 0 20px currentColor;
}

/* ============================================
   玻璃态效果 - 使用主色和辅色
   ============================================ */

.glass-effect {
  background: rgba(250, 249, 245, 0.05); /* 主色淡化 */
  backdrop-filter: blur(20px);
  border: 1px solid rgba(250, 249, 245, 0.1);
}

.cosmic-glass {
  background: rgba(245, 244, 237, 0.08); /* 辅色淡化 */
  backdrop-filter: blur(25px);
  border: 1px solid rgba(250, 249, 245, 0.15);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(250, 249, 245, 0.2);
}

.constellation-tag {
  background: rgba(250, 249, 245, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(250, 249, 245, 0.2);
  border-radius: 9999px;  /* Tag使用全圆角 */
  padding: var(--spacing-0-25) var(--spacing-0-75);  /* 组件内部固定间距 */
  font-size: 0.75rem;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.constellation-tag:hover {
  background: rgba(217, 119, 87, 0.2); /* 点缀色 */
  transform: scale(1.05);
  box-shadow: 0 var(--spacing-0-25) var(--spacing-0-75) rgba(217, 119, 87, 0.4);
}

/* ============================================
   动画效果 - 使用 Expo Out 缓动
   ============================================ */

@keyframes pulse-slow {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.8; transform: scale(1.05); }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInLeft {
  from { opacity: 0; transform: translateX(-30px); }
  to { opacity: 1; transform: translateX(0); }
}

@keyframes slideInRight {
  from { opacity: 0; transform: translateX(30px); }
  to { opacity: 1; transform: translateX(0); }
}

@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

.animate-pulse-slow {
  animation: pulse-slow 4s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

.animate-float {
  animation: float 3s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

.stellar-pulse {
  animation: pulse-slow 2s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

/* ============================================
   音乐卡片 - 使用点缀色
   ============================================ */

.music-timeline-container {
  position: relative;
  max-width: 80rem;
  margin: 0 auto;
  will-change: transform;
}

.music-card-item {
  transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
}

.music-card {
  backdrop-filter: blur(10px);
  border: 1px solid rgba(250, 249, 245, 0.1);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1), 
              box-shadow 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.card-hover {
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.card-hover:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 25px 50px -12px rgba(217, 119, 87, 0.3); /* 点缀色 */
}

.stellar-glow {
  box-shadow: 
    0 0 30px rgba(217, 119, 87, 0.4),
    0 0 60px rgba(201, 100, 66, 0.2),
    inset 0 0 30px rgba(250, 249, 245, 0.1);
}

/* ============================================
   统计卡片 - 使用点缀色
   ============================================ */

.music-stats-container {
  font-family: 'source-han-serif-sc', 'Noto Serif SC', system-ui, sans-serif;
}

.stat-card {
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1), 
              box-shadow 0.3s cubic-bezier(0.16, 1, 0.3, 1), 
              border-color 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  border: 1px solid rgba(250, 249, 245, 0.1);
}

.stat-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(217, 119, 87, 0.15);
  border-color: rgba(217, 119, 87, 0.3);
}

/* ============================================
   歌词流动效果
   ============================================ */

.lyric-stream-area {
  position: relative;
  overflow: hidden;
  mask: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
  -webkit-mask: linear-gradient(to right, transparent 0%, black 5%, black 95%, transparent 100%);
}

.stream-container {
  /* 使用主色和辅色创建渐变 */
  background: linear-gradient(135deg, rgba(250, 249, 245, 0.15) 0%, rgba(245, 244, 237, 0.05) 100%);
}

.lyrics-stream-container {
  position: relative;
  z-index: 1;
}

.lyric-stream-item {
  position: absolute !important;
  white-space: nowrap !important;
  pointer-events: auto;
  animation: streamFlow linear infinite;
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  will-change: transform, opacity;
}

.lyric-stream-item:hover {
  opacity: 1 !important;
  transform: scale(1.05) !important;
  z-index: 10;
  animation-play-state: paused;
}

@keyframes streamFlow {
  0% {
    transform: translateX(0);
    opacity: 0;
  }
  10% {
    opacity: 0.9;
  }
  90% {
    opacity: 0.9;
  }
  100% {
    transform: translateX(-150vw);
    opacity: 0;
  }
}

/* ============================================
   场景样式 - 使用设计系统颜色
   ============================================ */

.afternoon-scene {
  position: relative;
  /* 使用主色、辅色和点缀色创建温暖下午场景 */
  background: linear-gradient(135deg, 
    #faf9f5 0%,                      /* 主色 */
    #f5f4ed 30%,                     /* 辅色 */
    rgba(217, 119, 87, 0.3) 70%,    /* 点缀色淡化 */
    rgba(201, 100, 66, 0.4) 100%    /* 点缀色交互淡化 */
  );
  border-radius: var(--radius-lg);  /* 卡片圆角 16px */
  overflow: hidden;
  box-shadow: 0 var(--spacing-0-5) var(--spacing-1-5) rgba(0, 0, 0, 0.3);
}

.sun-ray {
  transform-origin: center;
  animation: pulse 2s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

.sun-ray:nth-child(2) { animation-delay: 0.2s; }
.sun-ray:nth-child(3) { animation-delay: 0.4s; }
.sun-ray:nth-child(4) { animation-delay: 0.6s; }
.sun-ray:nth-child(5) { animation-delay: 0.8s; }

.cloud {
  animation: float 6s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

.cloud:nth-child(2) {
  animation-delay: 1s;
}

.hill {
  filter: blur(1px);
}

/* ============================================
   关键词高亮 - 使用点缀色
   ============================================ */

.keyword-highlight {
  text-align: center;
  padding: var(--spacing-1);  /* 组件内部固定间距 */
  border-radius: var(--radius-lg);  /* 卡片圆角 16px */
  background: rgba(217, 119, 87, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(217, 119, 87, 0.2);
}

/* ============================================
   年度歌手展示 - 使用设计系统颜色
   ============================================ */

.artist-showcase-section {
  background: linear-gradient(135deg, 
    #141413 0%,                       /* 文字色作为深色背景 */
    #2a2a28 50%,                      /* 深色过渡 */
    rgba(217, 119, 87, 0.15) 100%    /* 点缀色淡化 */
  );
}

.main-artist-image {
  position: relative;
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.main-artist-image::before {
  content: '';
  position: absolute;
  inset: -4px;
  /* 使用点缀色创建旋转边框 */
  background: linear-gradient(45deg, #d97757, #c96442, #d97757, #c96442, #d97757);
  border-radius: 50%;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.main-artist-image:hover::before {
  opacity: 1;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.timeline-item {
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.timeline-item:hover {
  transform: translateY(-2px);
}

.timeline-item img {
  transition: filter 0.3s cubic-bezier(0.16, 1, 0.3, 1), 
              box-shadow 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  filter: brightness(0.9);
}

.timeline-item:hover img {
  filter: brightness(1.1);
  box-shadow: 0 8px 25px rgba(217, 119, 87, 0.3);
}

.floating {
  animation: floating 6s cubic-bezier(0.16, 1, 0.3, 1) infinite;
}

@keyframes floating {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(120deg); }
  66% { transform: translateY(-10px) rotate(240deg); }
}

.album-item:hover {
  transform: scale(1.1) rotate(2deg);
}

/* ============================================
   性能优化
   ============================================ */

.transform-gpu {
  transform: translateZ(0);
  will-change: transform;
}

.main-artist-image,
.timeline-item,
.floating,
.sun, 
.cloud, 
.hill, 
.music-notes {
  will-change: transform;
  backface-visibility: hidden;
}

.album-item img {
  will-change: transform;
  backface-visibility: hidden;
}

.album-item:hover img {
  filter: brightness(1.1) contrast(1.05);
  transform: translateZ(0);
}

img {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
}

/* ============================================
   响应式设计
   ============================================ */

@media (max-width: 768px) {
  .stellar-text {
    font-size: 2rem;
  }
  
  .music-card {
    padding: var(--spacing-1);  /* 16px */
  }
  
  .stat-card {
    padding: var(--spacing-0-75);  /* 12px */
  }
  
  .lyric-stream-item {
    font-size: 0.875rem;
    padding: var(--spacing-0-5) var(--spacing-1);  /* 8px 16px */
  }
  
  .stream-container {
    height: 32rem;
  }

  .lyric-stream-area {
    height: 28rem;
  }

  .afternoon-scene {
    height: 16rem;
  }

  .sun {
    width: 4rem;
    height: 4rem;
  }

  .keyword-highlight {
    text-align: center;
  }
  
  .timeline-item img {
    width: 4rem !important;
    height: 4rem !important;
  }
  
  .main-artist-image {
    width: 8rem !important;
    height: 8rem !important;
  }
  
  .artist-showcase-section .grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .artist-showcase-section h3 {
    text-align: center;
  }
}

/* ============================================
   可访问性：尊重用户的动画偏好
   ============================================ */

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
  
  /* 保留必要的动画（如加载指示器） */
  .animate-spin {
    animation-duration: 1s !important;
  }
}
